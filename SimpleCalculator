#include<iostream>
using namespace std;

int main()
{
	int num1,num2;
	char oper;
	cout<<"Enter the number 1"<<endl;
	cin>>num1;
	cout<<"Enter the number 2"<<endl;
	cin>>num2;
	cout<<"Enter the operator"<<endl;
	cin>>oper;
	
	char ans='N';
	while(ans=='N'){
	
	cout<<"Ans: ";
	switch(oper)
	{
		case '+':
			cout<<num1+num2;
			break;
		case '-':
			cout<<num1-num2;
			break;
		case '*':
			cout<<num1*num2;
			break;
		case '/':
			cout<<num1/num2;
			break;	
		case '%':
			cout<<num1%num2;
			break;
	}
	cout<<"\n Work done "<<endl<<" say Y(yes) or N(no) "<<endl;
	cin>>ans;
}
}
